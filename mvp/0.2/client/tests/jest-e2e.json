{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../server/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/utils/setup-e2e.ts"],
  "testTimeout": 20000
}